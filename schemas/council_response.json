{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CouncilResponse",
  "description": "Structured response from each LLM in the council",
  "type": "object",
  "required": ["model_id", "differentials", "recommended_next_steps", "confidence", "red_flag"],
  "properties": {
    "model_id": {
      "type": "string",
      "description": "Identifier of the responding model"
    },
    "differentials": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["label", "probability", "rationale"],
        "properties": {
          "label": {
            "type": "string",
            "description": "Possible diagnosis or condition"
          },
          "probability": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0,
            "description": "Confidence probability (0-1)"
          },
          "rationale": {
            "type": "string",
            "description": "Conservative explanation using hedged language"
          },
          "requires_verification": {
            "type": "boolean",
            "description": "True if rationale contains unverified external claims"
          },
          "verification_query": {
            "type": "string",
            "description": "Query string to verify external claims"
          }
        }
      },
      "minItems": 0,
      "maxItems": 10
    },
    "recommended_next_steps": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Conservative recommendations (e.g., 'Consult clinician')"
    },
    "confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Overall confidence in the response"
    },
    "red_flag": {
      "type": "boolean",
      "description": "True if potential emergency detected"
    },
    "red_flag_rationale": {
      "type": "string",
      "description": "Explanation if red_flag is true"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "latency_ms": {"type": "number"},
        "timestamp": {"type": "string", "format": "date-time"},
        "model_version": {"type": "string"}
      }
    }
  },
  "additionalProperties": false
}
